@rendermode InteractiveAuto
@{
    string image = _baseUrl + TestBoxModel.ImageUrl;
}
<div class="col d-flex justify-content-center mb-5">
    <div class="card border-0" style="width: 18rem;">
        <img src="@(image)" class="card-img-top" alt="@image">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title">@TestBoxModel.Name</h5>
                <div class="mb-1">
                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                    <i class="fa-solid fa-star text-warning"></i>
                </div>
                <p class="card-text text-primary fw-bold">@TestBoxModel.Price PLN</p>
            </div>
            <i class="fa-solid fa-cart-plus cart-add me-3" @onclick="OnAddBoxToCart"></i>

        </div>
    </div>
</div>